<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1d27"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Login!"
        android:textColor="#dededf"
        android:textSize="24dp"
        android:layout_above="@id/tvInputUserPass"/>

    <TextView
        android:id="@+id/tvInputUserPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Please Input Correct Username and Password!"
        android:textColor="#8f8f99"
        android:layout_above="@id/tvAccountInfo"/>

    <TextView
        android:id="@+id/tvAccountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtUsername"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Account Information"
        android:textColor="#8f8f99" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Username"
        android:fontFamily="@font/montserrat_semibold"
        android:textColorHint="#7c7e8b"
        android:textSize="14dp"
        android:background="@drawable/edittext_background"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="8dp"
        android:layout_above="@id/txtPassword"
        />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/txtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Password"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:textColorHint="#7c7e8b"
        android:textSize="14dp"
        android:layout_above="@id/btnLogin"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_medium"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp" />
</RelativeLayout>